{
  "outputDirectory": "public",
  "functions": {
    "platforms/vercel/api/**": {
      "runtime": "@vercel/node"
    }
  },
  "rewrites": [
    {
      "source": "/api/chat",
      "destination": "/platforms/vercel/api/chat"
    },
    {
      "source": "/api/validateCode",
      "destination": "/platforms/vercel/api/validateCode"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    }
  ]
}
